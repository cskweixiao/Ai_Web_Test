# 生产环境配置模板
# 复制此文件为 .env.production 并填入实际值

# 基础配置
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# 数据库配置
DATABASE_URL="mysql://root:Wo4545945@localhost:3306/automation_testing"

# 截图配置
SCREENSHOT_DIR=/var/app/screenshots
SCREENSHOT_RETENTION_DAYS=90
SCREENSHOT_MAX_FILE_SIZE=20971520
SCREENSHOT_QUALITY=85

# 安全配置
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
JWT_SECRET=your-jwt-secret-here
API_KEY_SALT=your-api-key-salt-here

# 日志配置
LOG_LEVEL=info
LOG_DIR=/var/log/app

# 监控配置
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000

# 性能配置
DB_POOL_MIN=2
DB_POOL_MAX=10
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# 文件存储配置（可选，用于云存储）
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-screenshot-bucket

