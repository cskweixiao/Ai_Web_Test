{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@0.0.30",
        "--browser", "chromium",
        "--no-sandbox",
        "--ignore-https-errors"
      ],
      "env": {
        "PLAYWRIGHT_HEADLESS": "false",
        "HEADLESS": "false",
        "DEBUG": "pw:browser*,pw:api*"
      }
    }
  },
  "defaults": {
    "timeout": 30000,
    "retries": 2,
    "screenshot": true,
    "video": false,
    "headless": false
  }
} 