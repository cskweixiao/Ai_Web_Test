{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@0.0.30",
        "--browser", "chromium",
        "--no-sandbox",
        "--ignore-https-errors"
      ],
      "env": {
        "PLAYWRIGHT_HEADLESS": "true",
        "HEADLESS": "true"
      }
    }
  },
  "defaults": {
    "timeout": 30000,
    "retries": 2,
    "screenshot": true,
    "video": false,
    "headless": true
  }
} 