{
  "name": "automation-testing-tool",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "node scripts/start.cjs",
    "dev": "cross-env NODE_NO_WARNINGS=1 concurrently \"npm run dev:server\" \"node --max-old-space-size=4096 ./node_modules/vite/bin/vite.js\"",
    "dev-visible": "concurrently \"npm run server-visible\" \"node --max-old-space-size=4096 ./node_modules/vite/bin/vite.js\"",
    "dev:frontend": "node --max-old-space-size=4096 ./node_modules/vite/bin/vite.js",
    "dev:server": "tsx watch server/index.ts",
    "server": "tsx server/index.ts",
    "server-visible": "cross-env PLAYWRIGHT_HEADLESS=false HEADLESS=false DEBUG=pw:browser* tsx server/index.ts",
    "mcp:start": "node scripts/mcp-start.cjs",
    "mcp:test": "clsnpx @playwright/mcp@latest --help",
    "mcp-test": "node scripts/mcp-start.cjs",
    "mcp-test-visible": "cross-env PLAYWRIGHT_HEADLESS=false HEADLESS=false node scripts/mcp-start.cjs",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "setup": "npm install",
    "test": "jest"
  },
